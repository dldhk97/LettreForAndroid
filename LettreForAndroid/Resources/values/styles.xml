<resources>

    <!-- 기본 스타일-->
    <style name="BasicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColorDark</item>
        <item name="actionMenuTextColor">@color/textColorDark</item>

        <item name="alertDialogTheme">@style/BasicAlertDialogStyle</item>
    </style>

    <style name="FadeInOutActivity" parent="BasicTheme">
      <item name="android:windowAnimationStyle">@style/FadeAnimation.Activity</item>
    </style>

    <style name="NulltActivity" parent="BasicTheme">
      <item name="android:windowAnimationStyle">@style/NullAnimation.Activity</item>
    </style>

    <!-- 다이얼로그 스타일 -->
    <style name="BasicAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
      <item name="colorAccent">@color/colorAccent</item>
      <item name="android:textColor">@color/textColorDark</item>
    </style>

    <!-- 툴바 스타일 -->
    <style name="BasicToolBarStyle" parent="BasicTheme">
      <item name="android:textColorPrimary">@android:color/white</item>
      <item name="android:textColorSecondary">@android:color/white</item>
      <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- 팝업 스타일 -->
    <style name="BasicPopupMenuStyle" parent="BasicTheme">
      <item name="android:colorBackground">@android:color/white</item>
      <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Activity Animation -->
    <style name="FadeAnimation.Activity" parent="@android:style/Animation.Activity">
      <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
      <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
      <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
      <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="NullAnimation.Activity" parent="@android:style/Animation.Activity">
      <item name="android:activityOpenEnterAnimation">@null</item>
      <item name="android:activityOpenExitAnimation">@null</item>
      <item name="android:activityCloseEnterAnimation">@null</item>
      <item name="android:activityCloseExitAnimation">@null</item>
    </style>

  <!-- Button Style -->
    <style name="BottomBtnStyle" parent="BasicTheme">
      <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>


</resources>
