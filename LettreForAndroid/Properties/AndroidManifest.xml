<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.SIG19.Lettre" android:installLocation="auto">
	<uses-sdk android:minSdkVersion="26" android:targetSdkVersion="26" />
	<application android:allowBackup="true" android:icon="@drawable/Icon_256" android:label="@string/app_name" android:roundIcon="@mipmap/ic_launcher_round" android:supportsRtl="true" android:theme="@style/BasicTheme">
		<!-- SMS 수신부분 정의 -->
		<receiver android:name=".SmsReceiver" android:enabled="true">
			<intent-filter android:priority="1">
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
		</receiver>
		<activity android:name=".SmsActivity" android:label="SMS"></activity>
	</application>
	<!-- 네트워크 관련 -->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<!-- 연락처 관련 -->
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.WRITE_CONTACTS" />
	<!-- SMS 관련 -->
	<uses-permission android:name="android.permission.READ_SMS" />
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.SEND_SMS" />
	<uses-permission android:name="android.permission.WRITE_SMS" />
	<uses-permission android:name="android.permission.BROADCAST_SMS" />
	<uses-permission android:name="android.permission.RECEIVE_MMS" />
  <!-- WAP_PUSH 관련 -->
	<uses-permission android:name="android.permission.BROADCAST_WAP_PUSH" />
	<uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />
</manifest>